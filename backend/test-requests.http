// Example API calls for testing

// 1. Create a user profile
POST http://localhost:5000/api/profile/1
Content-Type: application/json

{
  "profilePhoto": "https://example.com/photo.jpg",
  "profileName": "John Doe",
  "headline": "Full Stack Developer | JavaScript Enthusiast",
  "currentPosition": "Senior Software Engineer at Tech Corp",
  "address": "123 Main Street, San Francisco, CA 94105",
  "birthDate": "1990-05-15",
  "userBanner": "https://example.com/banner.jpg",
  "aboutSection": "Passionate full-stack developer with 5+ years of experience in building scalable web applications. Specialized in React, Node.js, and cloud technologies."
}

###

// 2. Add Education
POST http://localhost:5000/api/education/1
Content-Type: application/json

{
  "school": "Stanford University",
  "degree": "Bachelor of Science",
  "fieldOfStudy": "Computer Science",
  "startDate": "2015-09-01",
  "endDate": "2019-06-15",
  "grade": "3.8 GPA",
  "description": "Focused on artificial intelligence and machine learning"
}

###

// 3. Add Contact Info
POST http://localhost:5000/api/contact/1
Content-Type: application/json

{
  "phoneNumber": "+1-555-123-4567",
  "phoneType": "mobile"
}

###

// 4. Add Website
POST http://localhost:5000/api/website/1
Content-Type: application/json

{
  "websiteUrl": "https://johndoe.dev",
  "websiteType": "portfolio"
}

###

// 5. Add Experience
POST http://localhost:5000/api/experience/1
Content-Type: application/json

{
  "title": "Senior Software Engineer",
  "employmentType": "full-time",
  "companyOrganization": "Tech Corp",
  "startDate": "2020-01-15",
  "endDate": null,
  "location": "San Francisco, CA",
  "locationType": "hybrid",
  "description": "Lead development of microservices architecture serving 1M+ users. Mentored junior developers and conducted code reviews.",
  "skills": ["JavaScript", "React", "Node.js", "PostgreSQL", "AWS", "Docker"],
  "media": ["https://example.com/project-screenshot.jpg"]
}

###

// 6. Add Project
POST http://localhost:5000/api/project/1
Content-Type: application/json

{
  "projectName": "E-Commerce Platform",
  "description": "Built a full-stack e-commerce solution with real-time inventory management, payment processing, and admin dashboard.",
  "media": ["https://example.com/ecommerce-demo.jpg", "https://example.com/ecommerce-video.mp4"],
  "startDate": "2023-01-01",
  "endDate": "2023-06-30",
  "associatedWith": "Tech Corp",
  "projectUrl": "https://ecommerce-demo.com",
  "skills": ["React", "Node.js", "MongoDB", "Stripe API", "Redux"]
}

###

// 7. Get Complete Profile
GET http://localhost:5000/api/user/1/complete

###

// 8. Get Profile Stats
GET http://localhost:5000/api/user/1/stats

###

// 9. Get All Experiences
GET http://localhost:5000/api/experience/1

###

// 10. Update Experience
PUT http://localhost:5000/api/experience/1
Content-Type: application/json

{
  "description": "Updated description with more details about achievements and responsibilities."
}

###

// 11. Delete Project
DELETE http://localhost:5000/api/project/1

